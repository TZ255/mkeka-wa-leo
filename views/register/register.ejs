<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%- include('../0-global/vip-styles.ejs'); %>
  <%- include('../0-global/fonts.ejs'); %>
  <%- include('./partials/style.ejs'); %>
  <title>Register VIP - Mkeka wa Leo</title>
</head>

<body>
  <div class="d-flex justify-content-center align-items-center vh-100" style="background-color: var(--primary-bg);">
    <div class="login-form text-light h-auto rounded p-3">
      <div class="titleform fs-3 text-center mb-5 fw-bold">Register to <span class="hubColor">VIP</span></div>
      <%- include('../0-global/messages.ejs'); %>
      <form action="/user/register" method="post">
        <div class="mb-3">
          <label for="name" class="form-label"><i class="fa-regular fa-user"></i> Full Name:</label>
          <input type="text" class="form-control py-2" name="name" required title="Ingiza jina sahihi" placeholder="Jina lako">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label"><i class="fa-regular fa-envelope"></i> Email:</label>
          <input type="email" class="form-control py-2" name="email" required title="Ingiza Email sahihi" placeholder="Email">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label"><i class="fa-solid fa-key"></i> Password:</label>
          <input type="password" class="form-control py-2" name="password" required placeholder="Password">
        </div>
        <div class="text-center mt-4">
          <button type="submit" class="bataniHub text-dark w-75">
            Register &nbsp; &nbsp;
            <i class="fa-solid fa-right-long"></i>
          </button>
        </div>
      </form>
      <div class="foot text-center mt-3">
        <p class="mb-5">Tayari una account? <a href="/user/login" class="hubColor">Login</a> hapa</p>
      </div>
    </div>
  </div>
</body>
</html>