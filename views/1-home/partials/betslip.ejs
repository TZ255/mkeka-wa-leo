<% if (slip.length < 1) { %>
<p class="text-center zakesho">* Betslip ya Leo (Sure 3) bado iko kwenye maandalizi</p>
<% } %>

<% if (slip.length > 0) { %>
<div class="betslipCont" id="betslipCont">
    <div class="cap">
        <h2 id="betslip-ya-leo">
            ⭐⭐⭐ Betslip ya Leo (Sure 3) ⭐⭐⭐ <br>
            <span class="slip-siku">
                <i class="fa-solid fa-calendar-days"></i>
                <span id="trh_betslip">Jumanne: </span>25/02/2025
            </span>
        </h2>
    </div>

    <table class="table">
        <thead>
            <tr class="table-secondary">
                <th scope="col">Betslip</th>
                <th scope="col" class="cell-left">Odds</th>
            </tr>
        </thead>
        <tbody>
            <% slip.forEach(mch => { %>
            <tr class="table-light">
                <td>
                    <span class="d-inline-block" style="font-size: 10px;">
                        <i class="fa-solid fa-trophy"></i>
                        <%= mch.league %>
                    </span> <br>
                    <span class="match fw-bold">
                        <i class="fa-regular fa-futbol"></i>
                        <%= mch.match %>
                    </span> <br>
                    <b class="tip text-success scratchable scratch-all fw-bold">
                        tipGoesHere
                        <span class="scratch-overlay"></span>
                    </b>
                </td>
                <td class="cell-left" style="vertical-align: middle;">
                    <span class="scratchable scratch-all">
                        <%= mch.odd %>
                        <span class="scratch-overlay"></span>
                    </span>
                </td>
            </tr>
            <% }) %>

            <tr class="table-secondary">
                <th scope="col" style="font-size: 14px;">
                    Stake: <span class="brown">75,000 TZS</span><br>
                    Possible Win: <span class="brown"
                        id="slipOdd"><%= Number((slipOdds * 75000).toFixed(2)).toLocaleString('en-US') %> TZS</span>
                </th>
                <th scope="col" class="cell-left" style="font-size: 14px;">
                    Odds: <span class="brown"><%= slipOdds %></span> <br>
                    Bonus: <span style="color:green;">+15%</span>
                </th>
            </tr>
        </tbody>
    </table>

    <div class="bottomSlip">
        <div>
        </div>
        <div onclick="jiunge()">
            <span>JISAJILI VIP</span>
            <i class="fa-solid fa-crown"></i>
        </div>
    </div>

    <div class="scratch-instruction text-danger bg-light py-3" onclick="jiunge()"><i
            class="fa-solid fa-circle-exclamation"></i> <br>
        Jisajili na VIP
        kuona SURE 3 za leo</div>
</div>
<div class="text-danger p-2" style="font-size: 14px;">
    ⚠ Sure 3 ni kwa wateja wa VIP pekee
</div>
<% } %>

<script>
    function jiunge() {
        window.location.href = '/mkeka/vip'
    }
</script>