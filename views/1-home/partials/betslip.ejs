<div class="betslipCont" id="betslipCont">
    <div class="cap">
        <h2 id="betslip-ya-leo">
            ⭐⭐⭐ Betslip ya Siku ⭐⭐⭐ <br>
            <span class="slip-siku">
                <i class="fa-solid fa-calendar-days"></i>
                <span><b id="trh_betslip"></b> <%= trh.leo %></span>
            </span>
        </h2>
    </div>
    <table class="table">
        <thead>
            <tr class="table-secondary">
                <th scope="col">Betslip</th>
                <th scope="col" class="cell-left">Odds</th>
            </tr>
        </thead>
        <tbody>
            <% for( let mch of slip ) { %>
            <tr class="table-light">
                <td>
                    <span class="league">
                        <%= mch.time %> | <%= mch.league %>
                    </span> <br>
                    <span class="match">
                        <i class="fa-regular fa-futbol"></i> &nbsp
                        <%= mch.match.split(' vs ')[0].substring(0,16) %>
                        <span class="vs">vs</span>
                        <%= mch.match.split(' vs ')[1].substring(0,16) %>
                    </span> <br>
                    <b class="tip" onclick="window.open('/gsb/register')">
                        <%= mch.tip %>
                    </b> <br>
                </td>
                <td class="cell-left odds" style="vertical-align: middle;">
                    <%= mch.odd %>
                </td>
            </tr>
            <% } %>

            <tr class="table-secondary stake">
                <th scope="col" colspan="2" style="font-size: 14px; font-weight: normal;">
                    Total Odds: <span class="brown"><%= slipOdds %></span> <br>
                    Stake: <span class="brown">45,000 TZS</span><br>
                    Ushindi: <span class="brown" id="slipOdd"></span>
                    <span style="color:green;">+15% bonus</span>
                </th>
            </tr>
        </tbody>
    </table>
    <div class="bottomSlip">
        <div>BetWay</div>
        <div onclick="window.open('/betway-tz/register')">
            <span>WEKA BET</span>
            <i class="fa-solid fa-up-right-from-square"></i>
        </div>
    </div>
</div>

<script>
    let slipOdd = document.getElementById('slipOdd')
    let totalSlipOdd = '<%= slipOdds %>'
    slipOdd.innerText = (Number(totalSlipOdd) * 45000).toLocaleString('en-US') + ' TZS'
</script>