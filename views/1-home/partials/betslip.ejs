<div class="betslip-card" id="sure3_betslip_card">
    <!-- Header (visible) -->
    <h2 class="betslip-header">
        ⭐ Betslip ya Leo | SURE 3 ⭐

        <div class="d-flex align-items-center justify-content-center gap-2 mt-2" style="font-size: 0.75rem;">
            <span><i class="fa-regular fa-calendar me-1"></i><%= jumasiku.leo %>:</span>
            <span> <%= trh.leo %> </span>
        </div>
    </h2>

    <!-- if no vip tips -->
    <% if (slip.length < 1) { %>
    <p class="text-center zakesho">* Betslip ya Leo (Sure 3) bado iko kwenye maandalizi</p>
    <% } %>

    <!-- Matches... blurred by frosted overlay only -->
    <% if (slip?.length > 0) { %>
    <div class="matches-locked">
        <div class="betslip-body">
            <% slip.forEach(match => { %>
            <div class="match">
                <div class="league" style="font-size: 0.85rem;"><i
                        class="fa-solid fa-trophy text-warning me-1"></i><%= match?.league || "Premier League" %></div>
                <div class="teams" style="font-size: 0.85rem;"><%= match?.match || "Besiktas vs Fenerbahce" %></div>
                <div class="line">
                    <span>Tip: JOIN VIP</span>
                    <span class="pill">X.XX</span>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Frosted lock overlay... ONLY covers matches -->
        <div class="frost-lock">
            <div class="overlay-card" onclick="window.location.href='/mkeka/vip'">
                <div class="lock"><i class="fa-solid fa-lock"></i></div>
                <div class="heading">Jisajili VIP kuona SURE 3 za Leo</div>
                <div class="subtxt">Pata odds 10 hadi 30 kila siku za VIP kwa kujisajili na mikeka yetu ya VIP leo</div>
                <a href="/mkeka/vip" title="Jisajili VIP MIKEKA kuona mikeka yetu ya VIP"
                    class="btn btn-success px-3 fw-bold">
                    JISAJILI SASA
                    <i class="fa-solid fa-circle-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Summary (fully visible) -->
    <div class="summary">
        <div class="row-line"><span>Total Odds:</span><span class="value"><%= slipOdds || "12.55" %></span></div>
        <div class="row-line"><span>Stake:</span><span class="value">75,000 TZS</span></div>
        <div class="row-line"><span>Win Amount:</span><span
                class="value"><%= Number(((slipOdds || 12.55) * 75000).toFixed(2)).toLocaleString('en-US') %> TZS</span>
        </div>
    </div>

    <!-- Footer (visible) -->
    <div class="betslip-footer">
        <span style="font-size: 0.75rem;"><i class="fa-solid fa-lock me-1"></i> Mkeka huu ni kwa VIP pekee</span>
        <button class="btn btn-outline-success" onclick="window.location.href='/mkeka/vip'" style="font-size: 0.9rem;">
            INGIA VIP
            <i class="fa-solid fa-circle-right ms-2"></i>
        </button>
    </div>
    <% } %>
</div>