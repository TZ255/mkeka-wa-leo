<script>
    let yday_cont = document.getElementById('yday')
    let lday_cont = document.getElementById('lday')
    let kday_cont = document.getElementById('kday')
    let jday_cont = document.getElementById('jday')

    let ytoggle = document.getElementById('ytoggle')
    let ltoggle = document.getElementById('ltoggle')
    let ktoggle = document.getElementById('ktoggle')
    let jtoggle = document.getElementById('jtoggle')


    ytoggle.addEventListener('click', () => {
        ytoggle.classList.add('active_toggle')
        ltoggle.classList.remove('active_toggle')
        ktoggle.classList.remove('active_toggle')
        jtoggle.classList.remove('active_toggle')

        yday_cont.classList.remove('ficha')
        lday_cont.classList.add('ficha')
        kday_cont.classList.add('ficha')
        jday_cont.classList.add('ficha')
    })

    ltoggle.addEventListener('click', () => {
        ltoggle.classList.add('active_toggle')
        ytoggle.classList.remove('active_toggle')
        ktoggle.classList.remove('active_toggle')
        jtoggle.classList.remove('active_toggle')

        lday_cont.classList.remove('ficha')
        yday_cont.classList.add('ficha')
        kday_cont.classList.add('ficha')
        jday_cont.classList.add('ficha')
    })

    jtoggle.addEventListener('click', () => {
        jtoggle.classList.add('active_toggle')
        ytoggle.classList.remove('active_toggle')
        ktoggle.classList.remove('active_toggle')
        ltoggle.classList.remove('active_toggle')

        jday_cont.classList.remove('ficha')
        yday_cont.classList.add('ficha')
        kday_cont.classList.add('ficha')
        lday_cont.classList.add('ficha')
    })

    ktoggle.addEventListener('click', () => {
        const zakesho_txt = document.getElementById('zakesho')

        ktoggle.classList.add('active_toggle')
        ytoggle.classList.remove('active_toggle')
        ltoggle.classList.remove('active_toggle')
        jtoggle.classList.remove('active_toggle')

        //stringfy ejs obj then parse back to obj
        const ktips = JSON.parse('<%- JSON.stringify(ktips) %>')

        //kesho kama hamna onyesha hamna na ficha kesho cont
        if (ktips.length == 0) {
            zakesho_txt.style.display = 'block'
        }

        kday_cont.classList.remove('ficha')
        lday_cont.classList.add('ficha')
        yday_cont.classList.add('ficha')
        jday_cont.classList.add('ficha')
    })

    function sikuKesho() {
        let d = new Date().toLocaleString('en-GB', {timeZone: 'Africa/Nairobi', weekday: 'long'})
        let s = new Date().toLocaleDateString('en-GB', {timeZone: 'Africa/Nairobi'})
        let siku_kesho = document.getElementById('siku_kesho')
        let trh_slip = document.getElementById('trh_slip')

        //add one day to show tomorrow
        switch (d) {
            case 'Monday':
                siku_kesho.innerText = 'Jumanne'
                trh_slip.innerText = 'Jumatatu: ' + s
                break;

            case 'Tuesday':
                siku_kesho.innerText = 'Jumatano'
                trh_slip.innerText = 'Jumanne: ' + s
                break;

            case 'Wednesday':
                siku_kesho.innerText = 'Alhamis'
                trh_slip.innerText = 'Jumatano: ' + s
                break;

            case 'Thursday':
                siku_kesho.innerText = 'Ijumaa'
                trh_slip.innerText = 'Alhamis: ' + s
                break;

            case 'Friday':
                siku_kesho.innerText = 'Jumamosi'
                trh_slip.innerText = 'Ijumaa: ' + s
                break;

            case 'Saturday':
                siku_kesho.innerText = 'Jumapili'
                trh_slip.innerText = 'Jumamosi: ' + s
                break;

            case 'Sunday':
                siku_kesho.innerText = 'Jumatatu'
                trh_slip.innerText = 'Jumapili: ' + s
                break;

            default:
                siku_kesho.innerText = 'ðŸ˜©'
                break;
        }
    }
    sikuKesho()
</script>