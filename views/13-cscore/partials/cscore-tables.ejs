    </div>


    <!-- tomorrow -->
    <div class="tble-cont ficha" id="kday" style="display: none;" itemscope itemtype="https://schema.org/Table">
        <meta itemprop="about" content="CORRECT SCORES za Kesho: <%= jumasiku.kesho %>">
        <table class="table table-light table-striped">
            <thead>
                <tr class="table-dark">
                    <th scope="col">Time</th>
