<section class="keka-mix-sectio">
    <h2 class="fs-2 text-center fw-bold" id="spn-title">
        CORRECT SCORES za LEO
    </h2>
    <ul style="list-style: none; padding: 0; text-align: center;">
        <li class="spn_trh" id="spn_trh_leo"><b><i class="fa-solid fa-calendar-days"></i> <%= jumasiku.leo %>: </b><%= trh.leo %></li>
        <li class="spn_hide" id="spn_trh_juzi"><b><i class="fa-solid fa-calendar-days"></i> <%= jumasiku.juzi %>: </b><%= trh.juzi %></li>
        <li class="spn_hide" id="spn_trh_jana"><b><i class="fa-solid fa-calendar-days"></i> <%= jumasiku.jana %>: </b><%= trh.jana %></li>
        <li class="spn_hide" id="spn_trh_kesho"><b><i class="fa-solid fa-calendar-days"></i> <%= jumasiku.kesho %>: </b><%= trh.kesho %></li>
    </ul>
    <div class="toggle-cont" id="supa-za-leo">
        <div class="toggles">
            <div class="jtoggle" id="jtoggle">« Juzi</div>
            <div class="ytoggle" id="ytoggle">Jana</div>
            <div class="ltoggle active_toggle" id="ltoggle">⁕ Leo ⁕</div>
            <div class="ktoggle" id="ktoggle">Kesho »</div>
        </div>
    </div>

    <!-- today -->
    <div class="tble-cont" id="lday" itemscope itemtype="https://schema.org/Table">
        <meta itemprop="about" content="CORRECT SCORES za Leo: <%= jumasiku.leo %>">
        <table class="table table-light table-striped">
            <thead>
                <tr class="table-dark">
                    <th scope="col">Time</th>
                    <th scope="col">Matches</th>
                    <th class="tips-th" scope="col">Tip</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <% cscoreLeo.forEach(leagueGroup => { %>
                <tr class="league-row table-dark mt-8">
                    <td colspan="3" class="league-name"><%= leagueGroup._id.league %></td>
                </tr>
                <% leagueGroup.matches.forEach(match => { %>
                <tr itemscope itemtype="https://schema.org/SportsEvent">
                    <td class="time-td">
                        <time itemprop="startDate" datetime="<%= match.startDate %>">
                            <%= match.time %> <br> <span><%= match.siku %></span>
                        </time>
                    </td>
                    <td class="match-td">
                        <meta itemprop="name" content="<%= match.homeTeam %> vs <%= match.awayTeam %> Correct Score Tips">
                        <meta itemprop="description"
                            content="Utabiri wa correct score kati ya <%= match.homeTeam %> vs <%= match.awayTeam %>">
                        <meta itemprop="performer" content="<%= match.homeTeam %> vs <%= match.awayTeam %>">
                        <meta itemprop="location" content="<%= leagueGroup._id.league %>">
                        <meta itemprop="endDate" content="<%= match.endDate %>">
                        <span class="home" itemprop="homeTeam"><%= match.homeTeam %></span>
                        <br>
                        <span class="away" itemprop="awayTeam"><%= match.awayTeam %></span>
                    </td>
                    <th class="tip-td table-success"><%= match.tip %></th>
                </tr>
                <% }); %>
                <% }); %>
            </tbody>
        </table>
        <% if (cscoreLeo.length === 0) { %>
        <div class="zakesho">
            * CORRECT SCORES za <b>Leo: <%= trh.leo %></b> bado ziko kwenye maandalizi. <a href="/">Angalia hapa mikeka ilyotayari</a>
        </div>
        <% } %>
    </div>

    <!-- juzi -->
    <div class="tble-cont ficha" id="jday" style="display: none;" itemscope itemtype="https://schema.org/Table">
