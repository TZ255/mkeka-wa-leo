                    <time>
                        <%= el.time %> <br> <span><%= el.date %></span>
                    </time>
                </td>
                <td class="match-td">
                    <!-- include schemas -->
                    <meta itemprop="name" content="<%= el.match.split(' - ')[0] %> vs <%= el.match.split(' - ')[1] %> Tips">
                    <meta itemprop="description"
                        content="Over 0.5 HT | <%= el.match.split(' - ')[0] %> vs <%= el.match.split(' - ')[1] %>">
                    <meta itemprop="performer" content="<%= el.match.split(' - ')[0] %> vs <%= el.match.split(' - ')[1] %>">
                    <span class="league" itemprop="location"><%= el.league %></span>
                    <br>
                    <span class="home" itemprop="homeTeam">
                        <%= el.match.split(' - ')[0] %>
                    </span>
                    <br>
                    <span class="away" itemprop="awayTeam">
                        <%= el.match.split(' - ')[1] %>
                    </span>
                </td>
                <th class="tip-td" style="color: gold;">Over 0.5</th>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% if (stips.length === 0) { %>
        <div class="zakesho">
            * Tips za Leo <b><%= trh.leo %></b> bado hazijaandaliwa, rudi baada ya mda kidogo zitakuwa tayari.
        </div>
    <% } %>
    <% if (stips.length > 0) { %>
        <%- include('aff-gsb.ejs'); %>
    <% } %>
</div>


