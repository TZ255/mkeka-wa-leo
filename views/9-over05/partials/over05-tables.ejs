<div class="toggle-cont" id="supa-za-leo">
    <div class="toggles">
        <div class="jtoggle" id="jtoggle">« Juzi</div>
        <div class="ytoggle" id="ytoggle">Jana</div>
        <div class="ltoggle active_toggle" id="ltoggle">⁕ Leo ⁕</div>
        <div class="ktoggle" id="ktoggle">Kesho »</div>
    </div>
</div>

<!-- juzi -->
<div class="tble-cont ficha" id="jday">
    <div class="table-head">
        <h2>
            <span style="display: block;">⭐ Over 0.5 HT Tips | Juzi ⭐</span>
            <span class="spn_trh"><b id="trh_jz"><%= jumasiku.juzi %>: </b><%= trh.juzi %></span>
        </h2>
    </div>
    <table class="table table-dark table-striped-columns">
        <thead>
            <tr>
                <th scope="col">Time</th>
                <th scope="col">Matches</th>
                <th class="tips-th" scope="col">Tips</th>
            </tr>
        </thead>
        <tbody>
            <% jtips.forEach(el=> { %>
            <tr>
                <td class=" time-td">
                    <time>
                        <%= el.time %> <br> <span><%= el.date %></span>
                    </time>
                </td>
                <td class="match-td">
                    <span class="league"><%= el.league %></span> <br>
                    <%- el.match.replace(/ - /g, '<br>' ) %>
                </td>
                <th class="tip-td" style="color: gold;">Over 0.5</th>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% if (jtips.length > 0) { %>
        <%- include('aff-gsb.ejs'); %>
    <% } %>
</div>

