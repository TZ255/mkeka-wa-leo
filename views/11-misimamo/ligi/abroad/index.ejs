<!DOCTYPE html>
<html lang="sw">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
        content="Msimamo wa <%= partials.ligi %> - <%= partials.league_name %> <%= partials.season_long %>. Angalia msimamo, ratiba na matokeo ya mechi za msimu mzima">
    <%- include('../../../0-global/favicon.ejs') %>
    <meta property="article:modified_time" content="<%= partials.updatedAt %>">
    <title>Msimamo wa <%= partials.ligi %>
        <%= partials.season_long %> - Ratiba na Matokeo</title>
    <%- include('../../../0-global/style.ejs'); %>
    <%- include('../../../0-global/google.ejs'); %>
    <%- include('../../../0-global/fonts.ejs'); %>
    <style>
        .tdata {
            font-size: 12px;
        }

        .relegation {
            background-color: #d32f2f !important;
            color: #ffffff !important;
        }

        .champions {
            background-color: #1976d2 !important;
            color: #ffffff !important;
        }

        .europa {
            background-color: #0097a7 !important;
            /* Teal/cyan */
            color: #ffffff !important;
        }

        .conference {
            background-color: #7b1fa2 !important;
            /* Purple */
            color: #ffffff !important;
        }

        .PST {
            text-decoration: line-through;
        }
    </style>
</head>

<body>
    <%- include('../../../0-global/header.ejs'); %>
    <main>
        <section class="left text-align-justify">
            <div class="intro">
                <h1 class="fs-3 p-2">Msimamo wa <%= partials.ligi %>
                    <%= partials.season_long %> - Ratiba na Matokeo</h1>
                <span class="meta-info-el meta-info-date d-block p-2 mb-3 text-muted" style="font-size: 12px;">
                    <i class="fa-regular fa-clock"></i> Updated on:
                    <abbr class="date published" title="<%= partials.updatedAt %>">
                        <%= new Date(partials.updatedAt).toLocaleString('en-US', {timeZone: 'Africa/Nairobi' ,
                                hour: "2-digit" , minute: "2-digit" , weekday: "long" , year: "numeric" , month: "long"
                                , day: "numeric" ,}) %>
                    </abbr>
                </span>
            </div>
            <%- include('./partials/standing.ejs'); %>
            <br>
            <%- include('./partials/fixtures.ejs'); %>
            <br>
            <div class="vidokezo p-2">
                <h2 class="h2 fs-6">Vidokezo <%= partials.ligi %>
                    <%= partials.season_short %>
                </h2>
                <ul class="list-group list-group-flush fw-bold">
                    <% if (partials?.stats.scorer > 0) { %>
                     <li class="list-group-item">
                        <a href="/wafungaji-bora/<%= partials.league_id %>/<%= partials.season %>"
                            class="text-success text-decoration-none">
                            Orodha ya Wafungaji Bora <%= partials.ligi %>
                            <%= partials.season_short %>
                        </a>
                    </li>
                    <% } %>
                    <% if (partials?.stats.assist > 0) { %>
                     <li class="list-group-item">
                        <a href="/top-assists/<%= partials.league_id %>/<%= partials.season %>"
                            class="text-success text-decoration-none">
                            Orodha ya Watoa Assists Bora <%= partials.ligi %>
                            <%= partials.season_short %>
                        </a>
                    </li>
                    <% } %>
                </ul>
            </div>
            <br><br>
            <% if (typeof standing.standing[0] === 'object' && standing.standing[0] !== null && !Array.isArray(standing.standing[0])) { %>
            <%- include('./partials/teams-ratiba.ejs') %>
            <% } %>
            <%- include('../../../0-global/somapia.ejs'); %>
        </section>
        <%- include('../../../0-global/right.ejs'); %>
    </main>

    <%- include('../../../0-global/footer.ejs'); %>

    <%- include('../../../0-global/modal-gsb.ejs'); %>
    <%- include('../../../0-global/script.ejs'); %>

    <!-- bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
        crossorigin="anonymous"></script>
</body>

</html>