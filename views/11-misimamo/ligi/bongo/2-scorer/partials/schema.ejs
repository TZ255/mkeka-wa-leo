<!-- Top Scorers Schema LD -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "inLanguage": "sw-TZ",
  "name": "Wafungaji Bora NBC <%= partials.season_short %> - Ligi Kuu Tanzania Bara",
  "url": "https://mkekawaleo.com/football/top-scorers/tanzania/premier-league",
  "description": "Orodha ya wafungaji bora wa NBC, Ligi Kuu Tanzania Bara <%= partials.season_short %>, inasasishwa kila siku kulingana na magoli yaliyofungwa.",
  "mainEntity": {
    "@type": "ItemList",
    "name": "Wafungaji Bora",
    "itemListOrder": "https://schema.org/ItemListOrderDescending",
    "numberOfItems": <%= top_scorers.length %>,
    "itemListElement": [
      <% top_scorers.forEach((player, index) => { %>
      {
        "@type": "ListItem",
        "position": <%= index+1 %>,
        "item": {
          "@type": "Person",
          "name": "<%= player.playerName %>",
          "nationality": {
            "@type": "Country",
            "name": "<%= player.country %>"
          },
          "memberOf": {
            "@type": "SportsTeam",
            "name": "<%= player.club %>",
            "sport": "Soccer"
          },
          "additionalProperty": [
            {
              "@type": "PropertyValue",
              "propertyID": "goals",
              "name": "Magoli",
              "value": "<%= player.goals %>"
            }
          ]
        }
      }<% if (index !== top_scorers.length-1) { %>,<% } %>
      <% }) %>
    ]
  }
}
</script>

