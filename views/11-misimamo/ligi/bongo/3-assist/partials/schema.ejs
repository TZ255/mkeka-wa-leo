<!-- Top Asists Schema LD -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "inLanguage": "sw-TZ",
  "name": "Watoa Assist Bora NBC <%= partials.season_short %> - Ligi Kuu Tanzania Bara",
  "url": "https://mkekawaleo.com/football/top-assists/tanzania/premier-league",
  "description": "Orodha ya watoa assist bora wa NBC Tanzania Premier League <%= partials.season_short %>, inasasishwa kila siku kulingana na mechi zilizochezwa.",
  "mainEntity": {
    "@type": "ItemList",
    "name": "Watoa Assist Bora",
    "itemListOrder": "https://schema.org/ItemListOrderDescending",
    "numberOfItems": <%= top_assists.length %>,
    "itemListElement": [
      <% top_assists.forEach((player, index) => { %>
      {
        "@type": "ListItem",
        "position": <%= index+1 %>,
        "item": {
          "@type": "Person",
          "name": "<%= player.playerName %>",
          "nationality": {
            "@type": "Country",
            "name": "<%= player.country %>"
          },
          "memberOf": {
            "@type": "SportsTeam",
            "name": "<%= player.club %>",
            "sport": "Soccer"
          },
          "additionalProperty": [
            {
              "@type": "PropertyValue",
              "propertyID": "assists",
              "name": "Asisti",
              "value": "<%= player.assists %>"
            }
          ]
        }
      }<% if (index !== top_assists.length-1) { %>,<% } %>
      <% }) %>
    ]
  }
}
</script>

