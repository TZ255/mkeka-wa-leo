<section class="tables">
    <h2 class="p-2">Msimamo wa Makundi Africa kufuzu Kombe la Dunia 2026</h2>
    <span class="meta-info-el meta-info-date d-block p-2 mb-1 text-muted" style="font-size: 12px;">
        <i class="fa-regular fa-clock"></i> Updated on:
        <abbr class="date published" title="<%= partials.updatedAt %>">
            <%= new Date(partials.updatedAt).toLocaleString('en-US', {timeZone: 'Africa/Nairobi', hour: "2-digit", minute: "2-digit", weekday: "long", year: "numeric", month: "long", day: "numeric",}) %>
        </abbr>
    </span>
    <% standing.standing.forEach((st, i) => { %>
    <div class="table-section" itemscope itemtype="https://schema.org/Table">
        <h3 class="fs-6 bg-dark text-light p-3 fw-bold" itemprop="about">
            <%= String(st[0].group).replace('Group', 'Kundi').replace(' E', ' E (Kundi la Tanzania)').replace('Ranking of second-placed teams', 'Msimamo wa Timu zilizomaliza nafasi ya pili') %>
        </h3>
        <table class="table table-striped-columns">
            <thead style="font-size: 13px !important;">
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="fw-bold">Team</th>
                <th scope="col" class="text-center">MP</th>
                <th scope="col" class="text-center">W</th>
                <th scope="col" class="text-center">D</th>
                <th scope="col" class="text-center">L</th>
                <th scope="col" class="text-center">GD</th>
                <th scope="col" class="text-center">Pts</th>
            </thead>
            <tbody>
                <% st.forEach(team => { %>
                <tr>
                    <td class="tdata text-center champ<%= team.rank %>"><%= team.rank %>.</td>
                    <td class="tdata"><%= team.team.name %></td>
                    <td class="tdata text-center"><%= team.all.played %></td>
                    <td class="tdata text-center"><%= team.all.win %></td>
                    <td class="tdata text-center"><%= team.all.draw %></td>
                    <td class="tdata text-center"><%= team.all.lose %></td>
                    <td class="tdata text-center"><%= team.goalsDiff %></td>
                    <td class="text-success tdata text-center fw-bold"><%= team.points %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <% }) %>
</section>