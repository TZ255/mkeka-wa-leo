<!DOCTYPE html>
<html lang="sw">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= meta.title %></title>
    <meta name="description" content="<%= meta.description %>">
    <link rel="canonical" href="<%= meta.url %>">

    <!-- Locale hints -->
    <meta property="og:locale" content="sw_TZ">
    <meta http-equiv="content-language" content="sw-TZ">

    <!-- other partials -->
    <link rel="stylesheet" href="/css/global.css">
    <%- include('../0-global/blog-post-style.ejs'); %>
    <%- include('../0-global/google.ejs'); %>
    <%- include('../0-global/fonts.ejs'); %>
    <%- include('../0-global/favicon.ejs') %>
</head>

<body>
    <%- include('../0-global/header.ejs'); %>

    <main>
        <section class="left">
            <article id="blog-post">
                <% if (toc && toc.length > 2) { %>
                <div id="table-of-contents" class="toc-container">
                    <div class="h4">
                        Yaliyomo
                        <button id="toc-toggle" class="toc-toggle">[+]</button>
                    </div>
                    <ul id="toc-list" class="toc-list">
                        <% toc.forEach(function(item) { %>
                        <li style="padding-left: <%= (item.level - 1) * 1 %>rem;">
                            <a href="#<%= item.slug %>"><%= item.text %></a>
                        </li>
                        <% }); %>
                    </ul>
                </div>
                <% } %>
                <%- body %>
            </article>
        </section> <br><br>
    </main>

    <%- include('../0-global/footer.ejs'); %>
    <%- include('../0-global/blog-post-script.ejs'); %>
    <%- include('../0-global/script.ejs'); %>

    <!-- bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
        crossorigin="anonymous"></script>
</body>
</html>