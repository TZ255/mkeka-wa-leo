<section class="keka-mix-sectio shadow rounded mb-5">
    <h2 class="fs-2 text-center fw-bold" id="spn-title">
        Tips za Over 1.5 Kesho <br> 
        <span class="fs-6"><%= jumasiku.kesho %>: <%= trh.kesho %></span>
    </h2>

    <!-- tomorrow -->
    <div class="tble-cont" id="kday" itemscope itemtype="https://schema.org/Table">
        <meta itemprop="about" content="Mikeka ya Over 1.5 kesho - <%= jumasiku.kesho %>">
        <table class="table table-light table-striped">
            <thead>
                <tr class="table-dark">
                    <th scope="col">Time</th>
                    <th scope="col">Matches</th>
                    <th class="tips-th" scope="col">Tip</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <% ktips.forEach(leagueGroup => { %>
                <tr class="league-row table-dark mt-8">
                    <td colspan="3" class="league-name"><%= leagueGroup._id.league %></td>
                </tr>
                <% leagueGroup.matches.forEach(match => { %>
                <tr itemscope itemtype="https://schema.org/SportsEvent">
                    <td class="time-td">
                        <time itemprop="startDate" datetime="<%= match.startDate %>">
                            <%= match.time %> <br> <span><%= match.date %></span>
                        </time>
                    </td>
                    <td class="match-td">
                        <meta itemprop="name" content="<%= match.homeTeam %> vs <%= match.awayTeam %> Tips">
                        <meta itemprop="description"
                            content="Utabiri wa leo kati ya <%= match.homeTeam %> vs <%= match.awayTeam %>">
                        <meta itemprop="performer" content="<%= match.homeTeam %> vs <%= match.awayTeam %>">
                        <meta itemprop="location" content="<%= leagueGroup._id.league %>">
                        <meta itemprop="endDate" content="<%= match.endDate %>">
                        <span class="home" itemprop="homeTeam"><%= match.homeTeam %></span>
                        <br>
                        <span class="away" itemprop="awayTeam"><%= match.awayTeam %></span>
                    </td>
                    <th class="tip-td table-success"><%= match.bet %></th>
                </tr>
                <% }); %>
                <% }); %>
            </tbody>
        </table>
        <% if (ktips.length === 0) { %>
        <div class="alert alert-warning mx-1" role="alert">
            Bado hakuna tips za Over 1.5 kwa siku ya kesho, tafadhali tembelea tena baadae au endelea kufuatilia <a href="/mkeka" class="text-success" title="Mikeka ya Bure">mikeka yetu mingine ya bure hapa.</a>
        </div>
        <% } %>
        <% if (ktips.length > 0) { %>
        <!-- <%- include('../../0-global/aff.ejs'); %> -->
        <% } %>
    </div>
</section>

<!-- Mechi zingine kesho -->
<div class="card border-success border-start border-5 shadow-sm mb-4 mx-auto hover-effect" style="width: 98%;">
    <div class="card-body py-3">
      <div class="d-flex align-items-center mb-2">
        <i class="fa-solid fa-calendar-day text-success me-2 fs-5"></i>
        <h4 class="card-title mb-0 fw-bold">Mechi Zingine za Kesho:</h4>
      </div>
      <div class="d-flex align-items-center">
        <i class="fa-solid fa-futbol text-success me-2"></i>
        <a href="/mkeka/<%= jumasiku.kesho.toLowerCase() %>" 
           class="text-success text-decoration-none fw-semibold d-flex align-items-center transition-link"
           aria-label="Tazama utabiri wa mechi zote za kesho">
          Tazama utabiri wa mechi zote za kesho
          <i class="fa-solid fa-arrow-right ms-2 arrow-transition"></i>
        </a>
      </div>
    </div>
  </div>