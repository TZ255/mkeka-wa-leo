<section class="cont shadow-lg rounded" itemscope>
    <h2 class="header" id="mega-za-kesho">
        <div>
            <i class="fa-solid fa-star star8"></i>
            Mega Odds za Kesho
            <i class="fa-solid fa-star star8"></i>
        </div>
        <div style="font-size: 12px; margin-top: 12px;">ðŸ“… <%= jumasiku.kesho %>: <%= trh.kesho %></div>
    </h2>
    <% if (mikeka.length > 0) { %>
    <div>
        <ul class="list-group list-group-flush">
            <% mikeka.forEach(el=> { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div class="ms-2 me-auto">
                    <div class="date">
                        <div class="dtime">
                            <%= el.time %>
                        </div>
                        <div class="ligi">
                            <%= el.league %>
                        </div>
                    </div>
                    <div class="fw-bold">
                        <div class="match">
                            <%= el.match.split(' - ')[0] %><br>
                            <%= el.match.split(' - ')[1] %>
                        </div>
                        <div class="bet"><%= el.bet %></div>
                    </div>
                </div>
                <span class="badge rounded-pill" onclick="window.open('/betway/register')"
                    style="width: 48px; text-align: center; font-weight: bold; padding: 17px 8px; cursor: pointer; background-color: #00A826; color: white; font-family: serif; font-size: 16px;">
                    <%= String(el.odds).padEnd(4, '0') %>
                </span>
            </li>
            <% }) %>
        </ul>
    </div>
    <div class="total">
        <div class="subtotal">
            <div class="btm w40">
                <span class="hdr">Bookie</span>
                <span class="ct" style="background-color: black; color: white; font-weight: bold;">BetWay</span>
            </div>
            <div class="btm w25">
                <span class="hdr">Total Odds</span>
                <span class="ct">
                    <%= Number(megaOdds) %>
                </span>
            </div>
            <div class="btm w25">
                <span class="hdr">Bonus</span>
                <span class="ct">400%</span>
            </div>
        </div>
        <div class="tangazo">
            * Pata Tsh. 2,000 BURE! Kwa Kujisajili Leo
        </div>
        <div class="sasa">
            <button onclick="window.open('/betway/register')" style="width: 80%; max-width: 300px;">
                <i class="fa-solid fa-circle-dollar-to-slot"></i>
                PATA TSH. 2,000 BURE!&nbsp;
                <i class="fa-solid fa-up-right-from-square"></i></button>
        </div>
    </div>
    <% } %>

    <% if (mikeka.length == 0) { %>
        <div class="alert alert-warning mx-1" role="alert">
            Bado hakuna tips za Mega Odds kwa siku ya kesho, tafadhali tembelea tena baadae au endelea kufuatilia <a href="/mkeka" class="text-success" title="Mikeka ya Bure">mikeka yetu mingine ya bure hapa.</a>
        </div>
        <br>
    <% } %>
</section>