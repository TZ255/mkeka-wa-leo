<section class="mega-card card border-0 shadow-sm" itemscope>
    <!-- Navigation Header -->
    <div class="btn-group" role="group" aria-label="Mikeka ya Leo na Kesho">
        <a href="/"
            class="btn <%= trh.siku === 'leo' ? 'btn-dark text-light' : 'btn-light text-muted' %>" title="Mkeka wa Leo"
            style="border-top-left-radius: 16px; border-bottom-left-radius: 0;">
            Leo
        </a>
        <a href="/mkeka/kesho"
            class="btn <%= trh.siku === 'kesho' ? 'btn-dark text-light' : 'btn-light text-muted' %>" title="Mikeka ya Kesho"
            style="border-top-right-radius: 16px; border-bottom-right-radius: 0;">
            Kesho
        </a>
    </div>

    <!-- Title header -->
    <div class="mega-card__header border-top" id="mega-za-kesho">
        <div class="container-fluid py-3 py-md-4 px-3 px-md-4">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                <h2 class="mega-card__title m-0 fw-bold fs-3">
                    <span class="bullet" aria-hidden="true"></span>
                    Mega Odds za Kesho
                </h2>
                <div class="date-wrap d-flex align-items-center gap-2">
                    <span class="day-chip"><i class="fa-regular fa-calendar me-1"></i><%= jumasiku.kesho %></span>
                    <span class="vr d-none d-sm-inline"></span>
                    <span class="date-badge"> <%= trh.kesho %> </span>
                </div>
            </div>
        </div>
    </div>

    <% if (mikeka?.length > 0) { %>
    <div class="mega-card__body px-2 px-md-3 py-2 py-md-3">
        <div class="prediction-list">
            <% mikeka.forEach(el=> { %>
            <% const _parts = (el.match || '').split(' - '); const _home = _parts[0] || ''; const _away = _parts[1] || ''; %>
            <article class="prediction">
                <div class="prediction__grid">
                    <div class="prediction__meta">
                        <div class="time"><i class="fa-regular fa-clock me-1"></i><%= el.time %></div>
                        <div class="league mt-1"><span class="league-tag"><%= el.league %></span></div>
                    </div>
                    <div class="prediction__match">
                        <div class="teams">
                            <div class="team"><span class="dot" aria-hidden="true"></span><span
                                    class="name"><%= _home %></span></div>
                            <div class="team"><span class="dot alt" aria-hidden="true"></span><span
                                    class="name"><%= _away %></span></div>
                        </div>
                        <div class="bet mt-2 mt-md-1"><span class="bet-tag"><%= el.bet %></span></div>
                    </div>
                    <div class="prediction__odds">
                        <div class="odds-cta">
                            <span class="odds-chip" aria-label="Odds">
                                <%= String(el.odds).padEnd(4, '0') %>
                            </span>
                            <button class="btn bet-btn" type="button" onclick="window.open('/betway/register')"
                                aria-label="Bet now on Betway">
                                BET <i class="fa-solid fa-circle-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </article>
            <% }) %>
        </div>
    </div>
    <% } %>

    <!-- If no Tips -->
    <% if (mikeka.length == 0) { %>
    <div class="alert alert-warning mx-1" role="alert">
        Bado hakuna tips za Mega Odds kwa siku ya kesho, tafadhali tembelea tena baadae au endelea kufuatilia <a
            href="/mkeka" class="text-success" title="Mikeka ya Bure">mikeka yetu mingine ya bure hapa.</a>
    </div>
    <br>
    <% } %>

    <div class="mega-card__summary border-top">
        <div class="container-fluid py-3 py-md-4 px-3 px-md-4">
            <div class="row g-3 align-items-stretch metrics">
                <div class="col-12 col-md-4">
                    <div class="stat d-flex align-items-center gap-3 stat--bookie">
                        <div class="stat__icon"><i class="fa-solid fa-building-columns"></i></div>
                        <div class="stat__body">
                            <div class="label">Kampuni</div>
                            <div class="value"><span class="badge text-bg-dark px-3 py-2">BETWAY</span></div>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-4">
                    <div class="stat d-flex align-items-center gap-3 stat--odds">
                        <div class="stat__icon"><i class="fa-solid fa-chart-line"></i></div>
                        <div class="stat__body">
                            <div class="label">Total Odds</div>
                            <div class="value fw-bold fs-5"><%= Number(megaOdds) %></div>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-4">
                    <div class="stat d-flex align-items-center gap-3 stat--bonus">
                        <div class="stat__icon"><i class="fa-solid fa-gift"></i></div>
                        <div class="stat__body">
                            <div class="label">Bonus</div>
                            <div class="value fw-semibold">400%</div>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('../../0-global/aff-mega.ejs'); %>
        </div>
    </div>
</section>