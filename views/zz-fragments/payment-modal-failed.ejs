<% const subject = `Malipo Yameshindikana - Order ID: ${orderId}` %>
<% const emailBody = encodeURIComponent(`Habari MikekaTips, nimefanya malipo lakini hayajathibitishwa kwa wakati. \nOrder ID: ${orderId}\nEmail: ${email}\n\nHapa chini nimeambatanisha screenshot ya muamala wangu`) %>

<!-- OOB update: failed state in the same modal -->
<h5 id="paymentModalTitle" hx-swap-oob="true" class="modal-title text-danger">
  <i class="fa-solid fa-circle-xmark me-1"></i> Muda Umekwisha
</h5>

<div id="paymentModalBody" hx-swap-oob="true" class="modal-body">
  <div class="alert alert-danger d-flex flex-column align-items-center mb-2" role="alert">
    <i class="fa-solid fa-triangle-exclamation"></i>
    <div>
      <p>Hatukupokea uthibitisho wa malipo kwa wakati, tafadhali <strong>anza upya</strong> ikiwa bado hujathibitisha au kupokea menu ya malipo</p>
      <p>
        Ikiwa tayari umethibitisha bonyeza <b>Refresh</b> kuona kama malipo yamekamilika au kuwasiliana nasi
      </p>
    </div>
  </div>
  <div class="small text-muted">Order ID: <code><%= orderId %></code></div>
  <div class="small text-muted">Email: <code>info.mkekawaleo@gmail.com</code></div>

</div>

<div id="paymentModalFooter" hx-swap-oob="true" class="modal-footer d-flex justify-content-between">
  <button type="button" class="btn btn-outline-secondary" hx-post="/">
    <i class="fa-regular fa-circle-xmark me-1"></i>
    ANZA UPYA
  </button>
  <button class="btn btn-success d-inline-flex align-items-center" onclick="window.location.reload()">
    <i class="fa-solid fa-rotate-right me-2"></i>
    Refresh
  </button>
</div>
