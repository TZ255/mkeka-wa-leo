<div class="betslip-card" id="sure3_betslip_card">
  <!-- Header (visible) -->
  <h2 class="betslip-header mb-0">
    ‚≠ê Betslip ya Leo | SURE 3 ‚≠ê

    <div class="d-flex align-items-center justify-content-center gap-1 mt-2" style="font-size: 0.75rem;">
      <span><i class="fa-regular fa-calendar me-1"></i><%= jumasiku.leo %>:</span>
      <span><%= trh.leo %> </span>
    </div>
  </h2>

  <!-- if no vip tips -->
  <% if (slip.length < 1) { %>
  <p class="text-center zakesho">* Betslip ya Leo (SUPA 3) bado iko kwenye maandalizi</p>
  <% } %>

  <!-- Matches... blurred by frosted overlay only -->
  <% if (slip?.length > 0) { %>
  <div class="matches-locked">
    <div class="betslip-body">
      <% slip.forEach(match => { %>
      <div class="match" itemscope itemtype="https://schema.org/CreativeWork">
        <div class="league"><i class="fa-solid fa-trophy text-warning me-1"></i><%= match?.league || "Premier League" %></div>
        <div class="teams"><%= match?.match || "Besiktas vs Fenerbahce" %></div>
        <div class="line">
          <span>Tip: Locked <i class="fa-solid fa-lock"></i></span>
          <span class="pill"><i class="fa-solid fa-eye-slash"></i></span>
        </div>

        <!-- SEO CreativeWork -->
        <meta itemprop="headline" content="<%= match?.match %> VIP prediction - <%= trh.leo %>">
        <meta itemprop="about" content="Utabiri wa <%= trh.siku %> mechi ya <%= match?.match %>, <%= match?.league %>">
        <meta itemprop="datePublished" content="<%= trh.created %>">
        <meta itemprop="dateModified" content="<%= trh.created %>">
        <meta itemprop="author" content="Mkeka wa Leo">
        <meta itemprop="publisher" content="Mkeka wa Leo">
        <meta itemprop="keywords" content="utabiri wa mechi za leo za VIP, utabiri wa <%= match.league %>, <%= match?.match %> prediction">
        <meta itemprop="mainEntityOfPage" content="https://mkekawaleo.com/mkeka/betslip-ya-leo">
      </div>
      <% }) %>
    </div>

    <!-- Frosted lock overlay... ONLY covers matches -->
    <div class="frost-lock">
      <div class="overlay-card shadow" onclick="window.location.href='/mkeka/vip'">
        <div class="heading">SURE 3 ZA LEO üî•</div>
        <div class="subtxt">Jiunge na Mikeka ya VIP kwa Sure 3 za leo <br>Odds 10 hadi 35 kila siku!</div>
        <a href="/mkeka/vip" title="VIP Tips za Leo" class="btn btn-success px-3 fw-bold" style="font-size: 0.8rem;">
          JIUNGE SASA
        </a>
      </div>
    </div>
  </div>

  <!-- Summary (fully visible) -->
  <div class="summary">
    <div class="row-line"><span>Total VIP Odds:</span><span class="value"><%= slipOdds || "12.55" %></span></div>
    <div class="row-line"><span>Stake:</span><span class="value">35,000 TZS</span></div>
    <div class="row-line"><span>Win Amount:</span><span class="value"><%= Number(((slipOdds || 12.55) * 35000).toFixed(2)).toLocaleString('en-US') %> TZS</span>
    </div>
  </div>

  <!-- Footer (visible) -->
  <div class="betslip-footer">
    <span style="font-size: 0.75rem;"><i class="fa-solid fa-lock me-1"></i> Mkeka huu ni kwa VIP pekee</span>
    <button class="btn btn-outline-success" onclick="window.location.href='/mkeka/vip'" style="font-size: 0.9rem;">
      INGIA VIP
      <i class="fa-solid fa-circle-right ms-2"></i>
    </button>
  </div>
  <% } %>
</div>