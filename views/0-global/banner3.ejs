    <div class="p-1 text-center text-muted" style="font-size: 13px;">Jumanne, <b>Weka Tuweke!</b> Pata zaidi ukiweka pesa kwenye account yako leo!</div>
</div>
<br><br>


<script>
    function showAds() {
        let cas250 = document.getElementById('cas250');
        let j4 = document.getElementById('j4');
        let d = new Date().toLocaleString('en-GB', {timeZone: 'Africa/Nairobi', weekday: 'long'})

        if (d == "Tuesday") {
            cas250.style.display = 'none';
            j4.style.display = 'block';
        }
    }

    window.onload = showAds;
</script>

