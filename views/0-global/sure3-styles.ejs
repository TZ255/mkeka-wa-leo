<style>
  /* Removed global reset (*) and body styles ... those will break host page */

  .vip-card-wrapper {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    max-width: 480px;
  }

  .vip-promo-card {
    background: #ffffff;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    border: 1px solid #e5e7eb;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .vip-promo-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.12);
  }

  .card-header {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    padding: 24px;
    text-align: center;
    position: relative;
  }

  .vip-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.25);
    border: 1.5px solid rgba(255, 255, 255, 0.4);
    border-radius: 20px;
    padding: 6px 16px;
    font-size: 0.7rem;
    font-weight: 700;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 1.2px;
    margin-bottom: 8px;
  }

  /* Slip preview */
  .slip-preview {
    position: relative;
    background: #f9fafb;
    border: 2px solid #e5e7eb;
    border-radius: 16px;
    padding: 20px;
    margin-bottom: 20px;
    transform: rotate(-1.2deg);
    transition: transform 220ms ease;
  }

  /* Alternate tilt for a "stack of slips" feel */
  .slip-preview:nth-of-type(2) {
    transform: rotate(1deg);
  }
  .slip-preview:nth-of-type(3) {
    transform: rotate(-0.6deg);
  }

  .slip-preview:hover {
    transform: rotate(0deg) translateY(-2px);
  }

  .slip-blur {
    filter: blur(0.4px);
  }

  .slip-lock {
    background: #fef2f2;
    border: 1px solid #fecaca;
    border-radius: 8px;
    padding: 5px 10px;
    color: #dc2626;
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .slip-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
    margin-bottom: 14px;
  }

  .stat-box {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    padding: 12px 8px;
    text-align: center;
  }

  .stat-label {
    color: #6b7280;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 6px;
  }

  .stat-value {
    color: #111827;
    font-size: 1.05rem;
    font-weight: 800;
    line-height: 1;
  }

  .win-box {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    border-radius: 12px;
    padding: 14px;
    text-align: center;
  }

  .win-box .stat-label {
    color: rgba(255, 255, 255, 0.9);
    font-weight: 700;
    margin-bottom: 8px;
  }

  .win-box .stat-value {
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 900;
  }

  .benefits {
    background: #f9fafb;
    border-radius: 12px;
    padding: 16px;
    margin-bottom: 20px;
  }

  .benefit-check {
    background: linear-gradient(135deg, #10b981, #059669);
    color: #ffffff;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    font-size: 0.7rem;
    font-weight: 800;
    flex-shrink: 0;
  }

  .unlock-btn {
    width: 100%;
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    color: #ffffff;
    border: none;
    border-radius: 12px;
    padding: 16px;
    font-size: 1rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(245, 158, 11, 0.35);
  }

  .unlock-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(245, 158, 11, 0.45);
  }

  .unlock-btn:active {
    transform: translateY(0);
  }

  @media (max-width: 500px) {
    .card-header {
      padding: 20px;
    }

    .slip-preview {
      padding: 16px;
    }

    .stat-value {
      font-size: 0.95rem;
    }

    .win-box .stat-value {
      font-size: 1.3rem;
    }
  }
</style>