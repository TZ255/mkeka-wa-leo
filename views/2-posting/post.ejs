<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="nofollow,noindex">
    <title>Admin Posting</title>
    <style>
        body {
            padding: 24px 12px;
            margin: auto;
        }

        .cont {
            background-color: bisque;
            padding: 16px;
        }

        .gr {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin-top: 12px;
        }

        .gr input,
        .gr select {
            padding: 16px;
            border-radius: 6px;
        }

        .submit {
            text-align: center;
            font-weight: bold;
            margin-top: 16px;
        }

        .submit button {
            background-color: green;
            color: white;
            border: none;
            padding: 12px;
            font-size: large;
            border-radius: 8px;
            cursor: pointer;
            display: inline-block;
            margin: 8px;
        }

        .submit #reset {
            background-color: gray;
        }

        .mikeka {
            padding: 24px;
            background-color: aliceblue;
        }

        .mikeka .match {
            display: flex;
            justify-content: space-between;
            border-bottom: 2px black solid;
            border-right: 2px black solid;
            border-left: 2px black solid;
            border-radius: 8px;
            padding: 12px;
            margin: 12px auto;
        }

        .mikeka .match div {
            width: 20%;
        }

        .mikeka .match .mtc {
            width: 40%;
        }

        .mikeka .match .mtc span {
            display: block;
        }

        .mikeka .match .mtc .bt {
            color: gray;
        }

        .mikeka .delete button {
            background-color: red;
            padding: 6px;
            border: none;
        }
    </style>
</head>

<body>
    <form action="/post" method="post" target="_blank">
        <div class="cont" style="margin-bottom: 24px;">
            <h2 style="text-align: center;">Accumulator</h2>
            <div class="gr1 gr">
                <input type="date" name="date" required>
                <input type="text" placeholder="Match" name="match" required>
                <input type="number" placeholder="Odds" name="odds" required step="any">
                <select name="bet" id="bet" required>
                    <option value="0">*select bet option</option>
                    <option value="1st Half Multigoals: 1 - 2">1st Half Multigoals: 1 - 2</option>
                    <option value="1st Half Multigoals: 1 - 3">1st Half Multigoals: 1 - 3</option>
                    <option value="Both Halves Under 1.5: No">Both Halves Under 1.5: NO</option>
                    <option value="First 10 minutes: Draw 'X'">First 10 Minutes: Draw</option>
                    <option value="FT DC 12 & Over 1.5">FT DC 12 & Over 1.5</option>
                    <option value="Multigoals Hometeam: 1 - 2">Multigoals Hometeam: 1 - 2</option>
                    <option value="Multigoals Hometeam: 1 - 3">Multigoals Hometeam: 1 - 3</option>
                    <option value="Multigoals Awayteam: 1 - 2">Multigoals Awayteam: 1 - 2</option>
                    <option value="Multigoals Awayteam: 1 - 3">Multigoals Awayteam: 1 - 3</option>
                    <option value="Total Goal Rangess: 2 - 4">Total Goal Ranges: 2 - 4</option>
                    <option value="Home Win">Home Win</option>
                    <option value="Away Win">Away Win</option>
                    <option value="Over 2.5">Over 2.5</option>
                    <option value="Under 3.5">Under 3.5</option>
                </select>
                <input type="text" placeholder="Secret word" name="secret" required>
            </div>
            <div class="submit">
                <button type="submit">SUBMIT BET</button>
                <button id="reset" type="reset">RESET</button>
            </div>
        </div>
    </form>
    <br><br><br>

    <div class="mikeka">
        <% for( let mk of mikeka ) { %>
            <div class="match">
                <div class="dt">
                    <%= mk.date %>
                </div>
                <div class="mtc">
                    <span class="gm">
                        <%= mk.match %>
                    </span>
                    <span class="bt">
                        <%= mk.bet %>
                    </span>
                </div>
                <div class="delete" style=" width: 30;">
                    <form action="/delete/<%= mk._id %>" method="post" style="display: flex; justify-content: space-between;">
                        <input type="text" name="secret" placeholder="secret" required style="display: block;">
                        <button type="submit" style="display: flex;">Delete</button>
                    </form>
                </div>
            </div>
            <% } %>
    </div>

</body>

</html>