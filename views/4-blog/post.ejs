<!DOCTYPE html>
<html lang="sw">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= meta.title %></title>
    <meta name="description" content="<%= meta.description %>">
    <meta name="keywords" content="<%= meta.keywords %>">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://mkekawaleo.com/blog/<%= meta.slug %>">

    <!-- Locale hints -->
    <meta property="og:locale" content="sw_TZ">
    <meta http-equiv="content-language" content="sw-TZ">

    <!-- prefetch important resources -->
     <link rel="preload" href="/imgs/blog/makala-default.webp" as="image">

    <!-- dates -->
    <meta property="article:published_time" content="<%= meta.date_created %>">
    <meta property="article:modified_time" content="<%= meta.date_modified %>">

    <!-- Open Graph -->
    <meta property="og:type" content="article">
    <meta property="og:title" content="<%= meta.title %>">
    <meta property="og:description" content="<%= meta.description %>">
    <meta property="og:url" content="https://mkekawaleo.com/blog/<%= meta.slug %>">
    <meta property="og:site_name" content="Mkeka wa Leo | Blog">
    <% if (meta.coverImage) { %>
    <meta property="og:image" content="<%= meta.coverImage %>">
    <% } %>

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= meta.title %>">
    <meta name="twitter:description" content="<%= meta.description %>">
    <% if (meta.coverImage) { %>
    <meta name="twitter:image" content="<%= meta.coverImage %>">
    <% } %>

    <!-- schema -->
    <%- include('./partials/schema.ejs'); %>

    <!-- other partials -->
    <%- include('../0-global/blog-post-style.ejs'); %>
    <link rel="stylesheet" href="/css/global.css">
    <%- include('../0-global/google.ejs'); %>
    <%- include('../0-global/fonts.ejs'); %>
    <%- include('../0-global/favicon.ejs') %>
</head>

<body>
    <%- include('../0-global/header.ejs'); %>

    <!-- Breadcrumb Navigation -->
    <nav class="breadcrumb-nav" aria-label="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/"><i class="fas fa-home"></i> <span>Mkeka wa Leo</span></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/blog"><i class="fas fa-blog"></i> <span>Blog</span></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <i class="fas fa-file-alt"></i> <span><%= meta.title %></span>
                </li>
            </ol>
        </div>
    </nav>

    <main>
        <section class="left">
            <article id="blog-post">
                <% if (toc && toc.length > 2) { %>
                <div id="table-of-contents" class="toc-container">
                    <div class="h4">
                        Yaliyomo
                        <button id="toc-toggle" class="toc-toggle">[+]</button>
                    </div>
                    <ul id="toc-list" class="toc-list">
                        <% toc.forEach(function(item) { %>
                        <li style="padding-left: <%= (item.level - 1) * 1 %>rem;">
                            <a href="#<%= item.slug %>"><%= item.text %></a>
                        </li>
                        <% }); %>
                    </ul>
                </div>
                <% } %>
                <%- body %>
            </article>
            <%- include('../0-global/somapia.ejs'); %>
        </section> <br><br>

        <%- include('../0-global/right.ejs'); %>
    </main>

    <%- include('../0-global/footer.ejs'); %>
    <%- include('../0-global/modal-leon.ejs'); %>
    <%- include('../0-global/blog-post-script.ejs'); %>
    <%- include('../0-global/script.ejs'); %>

    <!-- bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
        crossorigin="anonymous"></script>
</body>

</html>