<style>
  #payment-area {
    width: 100%;
    max-width: 560px;
    margin: 0 auto;
  }

  #payment-area * {
    box-sizing: border-box;
  }

  #payment-area .payment-card {
    background: #ffffff;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    overflow: hidden;
    animation: slideUp 0.4s ease-out;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #payment-area .payment-header {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    padding: 1.5rem;
    color: white;
    text-align: center;
  }

  #payment-area .payment-header-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    display: block;
  }

  #payment-area .payment-header h5 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
  }

  #payment-area .payment-body {
    padding: 1.5rem;
  }

  #payment-area .payment-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: #4b5563;
    margin-bottom: 0.75rem;
  }

  #payment-area .payment-label i {
    color: #10b981;
    font-size: 1.1rem;
  }

  #payment-area .plan-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  #payment-area .plan-option {
    position: relative;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    padding: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    background: #ffffff;
  }

  #payment-area .plan-option:hover {
    border-color: #10b981;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.15);
  }

  #payment-area .plan-option input[type="radio"] {
    position: absolute;
    opacity: 0;
  }

  #payment-area .plan-option input[type="radio"]:checked + .plan-content {
    color: #10b981;
  }

  #payment-area .plan-option input[type="radio"]:checked ~ .plan-check {
    opacity: 1;
    transform: scale(1);
  }

  #payment-area .plan-option:has(input:checked) {
    border-color: #10b981;
    background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
  }

  #payment-area .plan-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    transition: color 0.3s ease;
  }

  #payment-area .plan-name {
    font-size: 1.1rem;
    font-weight: 700;
  }

  #payment-area .plan-price {
    font-size: 0.85rem;
    color: #6b7280;
    font-weight: 500;
  }

  #payment-area .plan-check {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    width: 24px;
    height: 24px;
    background: #10b981;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 0.75rem;
    opacity: 0;
    transform: scale(0);
    transition: all 0.3s ease;
  }

  #payment-area .phone-input-group {
    display: flex;
    align-items: stretch;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    background: #ffffff;
    margin-bottom: 1rem;
  }

  #payment-area .phone-input-group:focus-within {
    border-color: #10b981;
    box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
  }

  #payment-area .phone-prefix {
    background: #f9fafb;
    border-right: 2px solid #e5e7eb;
    padding: 1rem;
    display: flex;
    align-items: center;
    font-weight: 600;
    color: #374151;
    font-size: 1.1rem;
  }

  #payment-area .phone-input {
    flex: 1;
    border: none;
    padding: 1rem;
    font-size: 1.1rem;
    outline: none;
    background: transparent;
  }

  #payment-area .phone-input::placeholder {
    color: #9ca3af;
  }

  #payment-area .payment-invalid-feedback {
    display: none;
    color: #ef4444;
    font-size: 0.85rem;
    margin-top: 0.5rem;
    padding-left: 0.5rem;
  }

  #payment-area .was-validated .phone-input:invalid ~ .payment-invalid-feedback {
    display: block;
  }

  #payment-area .was-validated .phone-input-group:has(.phone-input:invalid) {
    border-color: #ef4444;
  }

  #payment-area .submit-btn {
    width: 100%;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    border: none;
    border-radius: 12px;
    padding: 1rem;
    font-size: 1.1rem;
    font-weight: 700;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    margin-top: 1.5rem;
  }

  #payment-area .submit-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
  }

  #payment-area .submit-btn:active:not(:disabled) {
    transform: translateY(0);
  }

  #payment-area .submit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  #payment-area .spinner-custom-css {
    width: 1.2rem;
    height: 1.2rem;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    border-top-color: white;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  #payment-area .htmx-indicator {
    display: none;
  }

  #payment-area .htmx-request .htmx-indicator {
    display: inline-block;
  }

  #payment-area .htmx-request .label-text {
    display: none;
  }

  #payment-area #pay-form-feedback {
    border-radius: 8px;
    padding: 0.75rem;
    font-size: 0.9rem;
  }

  @media (max-width: 480px) {
    #payment-area .payment-body {
      padding: 1.25rem;
    }

    #payment-area .plan-name {
      font-size: 1rem;
    }

    #payment-area .plan-price {
      font-size: 0.8rem;
    }

    #payment-area .phone-input,
    #payment-area .phone-prefix {
      font-size: 1rem;
      padding: 0.875rem;
    }

    #payment-area .submit-btn {
      font-size: 1rem;
      padding: 0.875rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    #payment-area *,
    #payment-area *::before,
    #payment-area *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>

<!-- Wrapper where HTMX swaps fragments -->
<div id="payment-area">
  <div class="payment-card">
    <div class="payment-header">
      <i class="fa-solid fa-wallet payment-header-icon"></i>
      <h5>Lipa kwa Simu</h5>
    </div>
    <div class="payment-body">
      <form id="@htmx-payment"
            hx-post="/api/pay"
            hx-target="#payment-area"
            hx-swap="innerHTML"
            hx-disabled-elt="input, button"
            class="needs-validation"
            novalidate>
        <!-- Plan selection -->
        <div>
          <label class="payment-label">
            <i class="fa-solid fa-file-zipper"></i>
            Chagua Kifurushi
          </label>
          <div class="plan-grid">
            <label class="plan-option">
              <input class="form-check-input" type="radio" name="plan" id="plan-silver" value="silver">
              <div class="plan-content">
                <div class="plan-name">Silver</div>
                <div class="plan-price">7,500 / Wiki</div>
              </div>
              <div class="plan-check">
                <i class="fa-solid fa-check"></i>
              </div>
            </label>
            <label class="plan-option">
              <input class="form-check-input" type="radio" name="plan" id="plan-gold" value="gold" checked>
              <div class="plan-content">
                <div class="plan-name">Gold</div>
                <div class="plan-price">12,500 / Wiki</div>
              </div>
              <div class="plan-check">
                <i class="fa-solid fa-check"></i>
              </div>
            </label>
          </div>
        </div>
        <!-- Phone: +255 prefix + 9 digits not starting with 0 -->
        <div>
          <label for="payPhone" class="payment-label">
            <i class="fa-solid fa-square-phone"></i>
            Namba ya Simu
          </label>
          <div class="phone-input-group">
            <span class="phone-prefix">+255</span>
            <input type="text"
                   class="phone-input"
                   id="payPhone"
                   name="phone9"
                   inputmode="numeric"
                   pattern="[1-9][0-9]{8}"
                   minlength="9"
                   maxlength="9"
                   placeholder="Mfano: 712345678"
                   autocomplete="tel"
                   required>
          </div>
          <div class="payment-invalid-feedback">Weka tarakimu 9 bila kuanza na 0.</div>
        </div>
        <!-- Inline feedback area for errors (updated via OOB swap) -->
        <div id="pay-form-feedback"></div>
        <button type="submit" class="submit-btn">
          <span class="label-text">
            Tuma Malipo
            <i class="fa-solid fa-paper-plane"></i>
          </span>
          <!-- HTMX loading indicator: spinner only -->
          <span class="htmx-indicator">
            <span class="spinner-border spinner-custom-css" role="status" aria-hidden="true"></span>
          </span>
        </button>
      </form>
    </div>
  </div>
</div>
<!-- Modal root: HTMX will inject modal HTML here -->
<div id="modal-root"></div>


<script>
  // Simple client-side Bootstrap validation (optional)
  (function () {
    const form = document.getElementById('@htmx-payment');
    if (!form) return;
    form.addEventListener('submit', function (e) {
      if (!form.checkValidity()) {
        e.preventDefault();
        e.stopPropagation();
      }
      form.classList.add('was-validated');
    }, false);
  })();
</script>