<div class="mb-4">
    <h2 class="text-center mt-5 fs-1">SUPA 3: VIP #1</h2>
    <h4 class="text-center mx-auto px-2 fw-bold"
        style="color: #8B6508; font-family: serif; width: fit-content;">3 SupaPicks
    </h4>
</div>

<% if (sure3.length < 1) { %>
<p class="text-center zakesho">* Betslip ya Siku (SUPA 3) kwa tarehe <%= d %> haipo</p>
<% } %>

<% if (sure3.length > 0) { %>
<div class="betslipCont mb-3" id="betslipCont">
    <div class="cap">
        <h2 id="betslip-ya-leo">
            ‚≠ê‚≠ê Betslip ya Siku (SUPA 3) ‚≠ê‚≠ê <br>
            <span class="slip-siku">
                <i class="fa-solid fa-calendar-days"></i>
                <span>
                    <%= new Date(d.split('/').reverse().join('-')).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric', timeZone: 'Africa/Nairobi' }) %>
                </span>
            </span>
        </h2>
    </div>

    <table class="table">
        <thead>
            <tr class="table-secondary">
                <th scope="col">Matches</th>
                <th scope="col" class="text-center align-middle" style="border-left: 1px solid #d3d3d3;">Odds</th>
            </tr>
        </thead>
        <tbody>
            <% sure3.forEach(mch => { %>
            <tr class="table-light">
                <td class="py-3">
                    <span class="d-inline-block border-bottom" style="font-size: 10px;">
                        üï§ <%= mch.time %> |
                        <i class="fa-solid fa-trophy"></i> <%= mch.league %>
                    </span> <br>

                    <span class="match fw-bold fs-6">
                        <i class="fa-regular fa-futbol"></i>
                        <%= String(mch.match).replace(' vs ', ' - ') %>
                    </span> <br>
                    <b class="tip fw-bold d-inline-block badge rounded-pill p-2 border border-dark text-dark"
                        style="background-color: #ffffff; width: 220px; font-size: 14px;">
                        <%= String(mch.tip).replace('Home Win', '1').replace('Away Win', '2') %>
                    </b> <br>

                    <% if (mch.status === 'won') { %>
                    <div class="fs-6">
                        <span class="badge bg-light text-success p-2 me-1">
                            <i class="fa-regular fa-circle-check"></i> WON <%= mch.result %>
                        </span>
                    </div>
                    <% } %>
                    <% if (mch.status === 'lose') { %>
                    <div class="fs-6">
                        <span class="badge bg-light text-danger p-2 me-1">
                            <i class="fa-regular fa-circle-xmark"></i> LOSE <%= mch.result %>
                        </span>
                    </div>
                    <% } %>
                </td>
                <td class="text-center text-muted align-middle py-3 table-default fw-bold
                 <%= mch.status === 'won' ? 'text-success' : (mch.status === 'lose' ? 'text-danger' : 'text-dark') %>"
                    style="vertical-align: middle; border-left: 1px solid #d3d3d3;">
                    <span>
                        <%= String(mch.odd).padEnd(4, '0') %>
                        <% if (mch.status === 'won') { %>
                        <div class="fs-6">
                            <span class="text-success">
                                <i class="fa-regular fa-circle-check"></i>
                            </span>
                        </div>
                        <% } %>
                        <% if (mch.status === 'lose') { %>
                        <div class="fs-6">
                            <span class="text-danger">
                                <i class="fa-regular fa-circle-xmark"></i>
                            </span>
                        </div>
                        <% } %>
                    </span>
                </td>
            </tr>
            <% }) %>

            <tr class="table-secondary text-muted">
                <th scope="col" style="font-size: 14px;">
                    Total Odds: <br>
                    Stake: <span class="text-success">75,000 TZS</span><br>
                    Bonus: <span class="text-success">+15%</span> <br>
                    Possible Win: <span class="text-success"
                        id="slipOdd"><%= Number((slipOdds * 75000).toFixed(2)).toLocaleString('en-US') %> TZS</span>
                </th>
                <th scope="col" class="text-center align-top text-success"
                    style="font-size: 16px; border-left: 1px solid #d3d3d3;">
                    <span class="fw-bold"><%= slipOdds %></span>
                </th>
            </tr>
        </tbody>
    </table>
</div>
<% } %>