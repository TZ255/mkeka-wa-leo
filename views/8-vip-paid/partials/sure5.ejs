<div class="betslipCont mb-3 mt-5" id="betslipCont">
    <div class="cap">
        <h2 id="betslip-ya-leo">
            Betslip ya Siku | Multigoals <br>
            <span class="slip-siku">
                <i class="fa-solid fa-calendar-days"></i>
                <span>
                    <%= new Date(d.split('/').reverse().join('-')).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric', timeZone: 'Africa/Nairobi' }) %>
                </span>
            </span>
        </h2>
    </div>

    <table class="table">
        <thead>
            <tr class="table-secondary">
                <th scope="col">Matches</th>
                <th scope="col" class="text-center align-middle" style="border-left: 1px solid #d3d3d3;">Odds</th>
            </tr>
        </thead>
        <% if (sure5.length > 0) { %>
        <tbody>
            <% sure5.forEach(mch => { %>
            <tr class="table-light">
                <td class="py-3">
                    <span class="d-inline-block fw-light" style="font-size: 13px;">
                        <%= mch.time %> | <%= mch.league %>
                    </span> <br>

                    <span class="match fw-bold fs-6">
                        <i class="fa-regular fa-futbol"></i>
                        <%= String(mch.match).replace(' vs ', ' - ') %>
                    </span> <br>
                    <b class="tip fw-bold d-inline-block badge rounded-pill p-2 border border-dark text-dark"
                        style="background-color: #ffffff; width: 220px; font-size: 14px;">
                        <%= String(mch.tip).replace('Home Win', '1').replace('Away Win', '2') %>
                    </b> <br>
                    <% if (mch?.expl && mch.expl.length > 5) { %>
                    <div class="text-dark p-1" style="font-size: 10px;">
                        <%= mch.expl %>
                    </div>
                    <% } %>
                    <% if (mch.status === 'won') { %>
                    <div class="fs-6">
                        <span class="badge bg-light text-success p-2 me-1">
                            <i class="fa-regular fa-circle-check"></i> WON <%= mch.result %>
                        </span>
                    </div>
                    <% } %>
                    <% if (mch.status === 'lose') { %>
                    <div class="fs-6">
                        <span class="badge bg-light text-danger p-2 me-1">
                            <i class="fa-regular fa-circle-xmark"></i> LOSE <%= mch.result %>
                        </span>
                    </div>
                    <% } %>
                </td>
                <td class="text-center text-muted align-middle py-3 table-default fw-bold
                     <%= mch.status === 'won' ? 'text-success' : (mch.status === 'lose' ? 'text-danger' : 'text-dark') %>"
                    style="vertical-align: middle; border-left: 1px solid #d3d3d3;">
                    <span>
                        <%= String(mch.odd).padEnd(4, '0') %>
                        <% if (mch.status === 'won') { %>
                        <div class="fs-6">
                            <span class="text-success">
                                <i class="fa-regular fa-circle-check"></i>
                            </span>
                        </div>
                        <% } %>
                        <% if (mch.status === 'lose') { %>
                        <div class="fs-6">
                            <span class="text-danger">
                                <i class="fa-regular fa-circle-xmark"></i>
                            </span>
                        </div>
                        <% } %>
                    </span>
                </td>
            </tr>
            <% }) %>

            <tr class="table-secondary text-muted">
                <th scope="col" style="font-size: 14px;">
                    <h6 class="fw-light" style="font-size: 14px;">Stake: 35,000 TZS</h6>
                    <h6 class="fw-light" style="font-size: 14px;">Win:
                        <%= Number(Number(sure5Odds)*35000).toLocaleString('en-US') %> TZS
                    </h6>
                    <u>Booking Code:</u>
                    <h6 class="ps-2"><i class="fa-regular fa-circle-right"></i> Gal Sport: <b><%= codes.slip2 %></b>
                    </h6>
                    <span class="fw-light" style="font-size: 12px;">Huna account Gal Sport?. <a href="/gsb/register"
                            target="_blank" class="fw-bold text-success" style="font-size: 14px;">Jisajili
                            Hapa!</a></span>
                </th>
                <th scope="col" class="text-center align-top text-muted"
                    style="font-size: 16px; border-left: 1px solid #d3d3d3;">
                    <span class="fw-bold"><%= sure5Odds %></span>
                </th>
            </tr>
        </tbody>
        <% } %>
    </table>
    <% if (sure5.length < 1) { %>
    <p class="text-center zakesho">* Betslip ya Siku (Multigoals) kwa tarehe <%= d %> haipo</p>
    <% } %>
</div>

<div class="border-bottom border-secondary p-2 w-75 text-muted">Total VIP Odds (#1 x #2): <span
        class="fw-bold"><%= (sure5Odds * slipOdds).toFixed(2) %></span></div>