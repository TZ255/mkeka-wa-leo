<div class="vip-card-wrapper mx-auto">
  <div class="vip-promo-card">
    <div class="card-body p-4">
      <!-- SLIP 1 -->
      <div class="slip-preview">
        <div class="slip-blur">
          <div class="slip-top d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
            <div class="slip-info d-flex align-items-center gap-2">
              <div class="slip-emoji fs-3">
                <i class="fa-solid fa-shield-halved"></i>
              </div>
              <div class="slip-meta">
                <h3 class="mb-0 fw-bold text-dark fs-5">VIP #1</h3>
                <p class="mb-0 text-uppercase fw-semibold text-secondary" style="font-size: .7rem; letter-spacing: .5px;">
                  Mkeka wa magoli
                </p>
              </div>
            </div>

            <div class="slip-lock d-inline-flex align-items-center gap-1">
              <i class="fa-solid fa-lock" style="font-size: .75rem;"></i>
              <span>Locked</span>
            </div>
          </div>

          <div class="slip-stats">
            <div class="stat-box">
              <div class="stat-label">Mechi</div>
              <div class="stat-value"><%= betslip1?.length || 0 %></div>
            </div>
            <div class="stat-box">
              <div class="stat-label">Odds</div>
              <div class="stat-value"><%= total_odds?.betslip1 || 1 %></div>
            </div>
            <div class="stat-box">
              <div class="stat-label">Stake</div>
              <div class="stat-value">35,000</div>
            </div>
          </div>

          <div class="win-box">
            <div class="stat-label">UWEZEKANO WA USHINDI</div>
            <div class="stat-value">TSh <%= Number(total_odds?.betslip1 * 35000).toLocaleString('sw-TZ') || 0.00 %></div>
