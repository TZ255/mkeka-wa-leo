<div class="betslipCont mb-3 mx-auto" id="betslipCont" style="max-width: 600px;">
    <div class="cap">
        <h2 id="betslip-ya-leo">
            Betslip ya Siku | SUPA 3
            <span class="slip-siku">
                <i class="fa-solid fa-calendar-days"></i>
                <span>
                    <%= new Date(d.split('/').reverse().join('-')).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric', timeZone: 'Africa/Nairobi' }) %>
                </span>
            </span>
        </h2>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Matches</th>
                <th scope="col">Odds</th>
            </tr>
        </thead>
        <% if (sure3.length > 0) { %>
        <tbody>
            <% sure3.forEach(mch => { %>
            <tr>
                <td class="match-data">
                    <div class="match-meta">
                        <%= mch.time %> | <%= mch.league %>
                    </div>

                    <div class="match-name">
                        <i class="fa-regular fa-futbol"></i>
                        <%= String(mch.match).replace(' vs ', ' - ') %>
                    </div>

                    <div class="scratch-bar">
                        Tip: Locked
                    </div>
                </td>
                <td class="odds-data">
                    <i class="fa-solid fa-eye-slash"></i>
                </td>
            </tr>
            <% }) %>

            <tr class="slip-summary" onclick="scrollToArticleGate()">
                <td class="text-center small text-muted" colspan="2">
                    Lipia kufungua mkeka huu <i class="fa-solid fa-arrow-up"></i>
                </td>
            </tr>
        </tbody>
        <% } %>
    </table>
    <% if (sure3.length < 1) { %>
    <p class="empty-slip">* Betslip ya Siku (SUPA 3) kwa tarehe <%= d %> haipo</p>
    <% } %>
</div>


