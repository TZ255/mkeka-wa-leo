<section class="rounded-top pt-3 bg-light shadow-lg rounded pb-5 mx-auto mt-4"
    style="border-top: 32px solid #8B6508; border-left: #8B6508 1px solid; border-right: #8B6508 1px solid; max-width: 600px;">
    <div class="mb-5">
        <h2 class="text-center mt-5 fs-1 text-dark">GoldenPicks: VIP #3</h2>
        <h5 class="text-center mx-auto px-2 fw-bold fs-5"
            style="color: #8B6508; font-family: serif; width: fit-content;">
            <i class="fa-solid fa-crown"></i>
            Tips <%= slips?.length %> za Nyongeza
        </h5>
    </div>
    <% if (slips.length > 0) { %>
    <div class="container">
        <div class="">
            <% slips.forEach(match => { %>
            <div class="mb-5">
                <div class="card match-card p-3 shadow rounded-3 border-0">
                    <div class="d-flex justify-content-between align-items-center mb-3 top-title">
                        <span class="league-badge"><i class="fa-solid fa-trophy"></i> <%= match.league %></span>
                        <div class="text-end">
                            <div class="match-time"><i class="fa-solid fa-clock"></i> <%= match.time %></div>
                            <div class="match-date">
                                <%= new Date(String(match.date).split('/').reverse().join('-')).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                            </div>
                        </div>
                    </div>
                    <div class="match-details text-center mb-3">
                        <h5 class="mb-3 fw-bold"><%= String(match.match).replace(' vs ', ' - ') %></h5>
                    </div>
                    <div class="text-center mb-2">
                        <span class="prediction-badge prediction-badge-gold fw-light"
                            onclick="scrollToArticleGate()">Locked <i class="fa-solid fa-ban"></i></span>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <% } %>

    <% if (slips.length == 0) { %>
    <p class="text-center zakesho">* Hakuna mikeka ya VIP iliyopatikana kwa tarehe <%= d %></p>
    <% } %>
</section>


<script>
    function scrollToArticleGate() {
        const targetElement = document.getElementById('article-gate');
        targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
        });
    }
</script>