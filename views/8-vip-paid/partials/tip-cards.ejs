<div class="container">
    <div class="">
      <% slips.forEach(match => { %>
       <div class="mb-5">
        <div class="card match-card p-3">
          <div class="d-flex justify-content-between align-items-center mb-3 border-bottom">
            <span class="league-badge"><i class="fa-solid fa-trophy"></i> <%= match.league %></span>
            <div class="text-end">
              <div class="match-time"><i class="fa-solid fa-clock"></i> <%= match.time %></div>
              <div class="match-date"><%= new Date(String(match.date).split('/').reverse().join('-')).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %></div>
            </div>
          </div>
          
          <div class="match-details text-center mb-3">
            <h5 class="mb-3 fw-bold"><%= String(match.match).replace(' vs ', ' - ') %></h5>
          </div>
          
          <div class="text-center">
            <span class="prediction-badge"><%= match.tip %></span>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>