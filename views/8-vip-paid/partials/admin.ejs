<h2 class="h2 mb-3 fw-bold bg-dark fs-5">Updating VIP Results</h2>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Admin - Updating Results</h4>
                </div>
                <div class="card-body">
                    <!-- Updating Sure 3 results -->
                    <ul class="list-group bg-warning py-3 mb-2">
                        <% sure3.forEach(match => { %>
                            <li class="list-group-item" id="<%= match._id %>">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-bold"><%= match.match %></span>
                                    <span class="badge <%= match.status === 'won' ? 'bg-success' : (match.status === 'lose' ? 'bg-danger' : 'bg-light') %> rounded-pill">
                                        <%= match.status %>
                                        <%= match.result %>
                                    </span>
                                </div>
                                <p class="mb-2">Tip: <b><%= match.tip %></b></p>
                                <form class="d-flex gap-2 mt-2" method="post" action="/update/vip/<%= match._id %>" target="_blank">
                                    <input type="text" name="scores" class="form-control form-control-sm" placeholder="Scores" required>
                                    <input type="text" name="status" class="form-control form-control-sm" placeholder="won, lose, postponed" required>
                                    <button class="btn btn-sm btn-primary" type="submit">Submit</button>
                                </form>
                            </li>
                        <% }) %>
                    </ul>
                    <!-- Updating VIP results -->
                    <ul class="list-group">
                        <% slips.forEach(match => { %>
                            <li class="list-group-item" id="<%= match._id %>">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-bold"><%= match.match %></span>
                                    <span class="badge <%= match.status === 'won' ? 'bg-success' : (match.status === 'lose' ? 'bg-danger' : 'bg-light') %> rounded-pill">
                                        <%= match.status %>
                                        <%= match.result %>
                                    </span>
                                </div>
                                <p class="mb-2">Tip: <b><%= match.tip %></b></p>
                                <form class="d-flex gap-2 mt-2" method="post" action="/update/vip/<%= match._id %>" target="_blank">
                                    <input type="text" name="scores" class="form-control form-control-sm" placeholder="Scores" required>
                                    <input type="text" name="status" class="form-control form-control-sm" placeholder="won, lose, postponed" required>
                                    <button class="btn btn-sm btn-primary" type="submit">Submit</button>
                                </form>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<hr class="my-4">

<h2 class="h2 mb-3 fw-bold bg-dark fs-5">Updating Match Tips</h2>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Admin - Updating Tips</h4>
                </div>
                <div class="card-body">
                    <!-- updating sure 3 matches -->
                    <ul class="list-group py-3 bg-warning mb-2">
                        <% sure3.forEach(match => { %>
                            <li class="list-group-item" id="<%= match._id %>">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-bold"><%= match.time %> | <%= match.league %></span>
                                </div>
                                <form class="d-flex flex-column mt-2" method="post" action="/update/vip/match-data/<%= match._id %>" target="_blank">
                                    <div class="d-flex">
                                        <input type="text" name="time" class="form-control form-control-sm" required value="<%= match.time %>">
                                        <input type="text" name="league" class="form-control form-control-sm" required value="<%= match.league %>">
                                    </div>

                                    <input type="text" name="game" class="form-control form-control-sm" required value="<%= match.match %>">

                                    <div class="d-flex">
                                        <input type="text" name="tip" class="form-control form-control-sm" required value="<%= match.tip %>">

                                        <input type="text" name="odd" class="form-control form-control-sm" required value="<%= match.odd %>">
                                    </div>

                                    <button class="btn btn-sm btn-primary d-block" type="submit">Submit</button>
                                </form>
                            </li>
                        <% }) %>
                    </ul>
                    <!-- List of items with individual forms -->
                    <ul class="list-group">
                        <% slips.forEach(match => { %>
                            <li class="list-group-item" id="<%= match._id %>">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-bold"><%= match.time %> | <%= match.league %></span>
                                </div>
                                <form class="d-flex flex-column mt-2" method="post" action="/update/vip/match-data/<%= match._id %>" target="_blank">
                                    <div class="d-flex">
                                        <input type="text" name="time" class="form-control form-control-sm" required value="<%= match.time %>">
                                        <input type="text" name="league" class="form-control form-control-sm" required value="<%= match.league %>">
                                    </div>

                                    <input type="text" name="game" class="form-control form-control-sm" required value="<%= match.match %>">

                                    <input type="text" name="tip" class="form-control form-control-sm" required value="<%= match.tip %>">

                                    <button class="btn btn-sm btn-primary d-block" type="submit">Submit</button>
                                </form>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<hr class="my-5">
