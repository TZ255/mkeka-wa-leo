<h2 class="text-center" id="updatingScores">Updating VIP Results</h2>
<div class="container mt-5 d-none" id="updatingScoresCont">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Admin - Updating Results</h4>
                </div>
                <div class="card-body">
                    <!-- Updating Sure 3 & 5 results -->
                    <ul class="list-group bg-warning py-3 mb-2">
                        <% sure3.forEach(match => { %>
                        <li class="list-group-item" id="<%= match._id %>">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-bold"><%= match.match %></span>
                                <span
                                    class="badge <%= match.status === 'won' ? 'bg-success' : (match.status === 'lose' ? 'bg-danger' : 'bg-light') %> rounded-pill">
                                    <%= match.status %>
                                    <%= match.result %>
                                </span>
                            </div>
                            <p class="mb-2">Tip: <b><%= match.tip %></b></p>
                            <form class="d-flex gap-2 mt-2" method="post" action="/update/vip/<%= match._id %>"
                                target="_blank">
                                <input type="text" name="scores" class="form-control form-control-sm"
                                    placeholder="Scores" required>
                                <input type="text" name="status" class="form-control form-control-sm"
                                    placeholder="won, lose, postponed" required>
                                <button class="btn btn-sm btn-primary" type="submit">Submit</button>
                            </form>
                        </li>
                        <% }) %>
                        <!-- -------VIP 2 Sure------------ -->
                        <hr>
                    </ul>
                    <!-- Updating VIP results -->
                    <ul class="list-group">
                        <% slips.forEach(match => { %>
                        <li class="list-group-item" id="<%= match._id %>">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-bold"><%= match.match %></span>
                                <span
                                    class="badge <%= match.status === 'won' ? 'bg-success' : (match.status === 'lose' ? 'bg-danger' : 'bg-light') %> rounded-pill">
                                    <%= match.status %>
                                    <%= match.result %>
                                </span>
                            </div>
                            <p class="mb-2">Tip: <b><%= match.tip %></b></p>
                            <form class="d-flex gap-2 mt-2" method="post" action="/update/vip/<%= match._id %>"
                                target="_blank">
                                <input type="text" name="scores" class="form-control form-control-sm"
                                    placeholder="Scores" required>
                                <input type="text" name="status" class="form-control form-control-sm"
                                    placeholder="won, lose, postponed" required>
                                <button class="btn btn-sm btn-primary" type="submit">Submit</button>
                            </form>
                        </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<hr class="my-4">

<h2 class="text-center" id="updatingMatches">Updating Match Tips</h2>
