<h2 class="text-center" id="postBookingCode">Posting Booking Code</h2>
<div class="container py-5 d-none" id="postBookingCodeCont">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-dark text-white p-3">
                    <h4 class="mb-0"><i class="fas fa-lock me-2"></i>Post Booking Code</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" action="/post/vip/code" target="_blank">
                        <div class="mb-3">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                <input type="date" class="form-control" name="date" required>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-8">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    <input type="text" class="form-control" name="code" placeholder="Booking Code" required>
                                </div>
                            </div>
                            <div class="col-4">
                                <input type="number" class="form-control" id="digit" name="slip_no" placeholder="0-9" min="0" max="9" maxlength="1" oninput="if(this.value.length > 1) this.value = this.value.slice(0,1); if(this.value < 0) this.value = 0; if(this.value > 9) this.value = 9;" required>
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


