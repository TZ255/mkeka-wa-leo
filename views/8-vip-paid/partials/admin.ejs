    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Admin - Updating Tips</h4>
                </div>
                <div class="card-body">
                    <!-- updating sure 3 matches -->
                    <ul class="list-group py-3 bg-warning mb-2">
                        <% sure3.forEach(match => { %>
                        <li class="list-group-item" id="<%= match._id %>">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-bold"><%= match.time %> | <%= match.league %></span>
                            </div>
                            <form class="d-flex flex-column mt-2" method="post"
                                action="/update/vip/match-data/<%= match._id %>" target="_blank">
                                <div class="d-flex">
                                    <input type="text" name="time" class="form-control form-control-sm" required
                                        value="<%= match.time %>">
                                    <input type="text" name="league" class="form-control form-control-sm" required
