                    <!-- List of items with individual forms -->
                    <ul class="list-group">
                        <% slips.forEach(match => { %>
                        <li class="list-group-item" id="<%= match._id %>">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-bold"><%= match.time %> | <%= match.league %></span>
                            </div>
                            <form class="d-flex flex-column mt-2" method="post"
                                action="/update/vip/match-data/<%= match._id %>" target="_blank">
                                <div class="d-flex">
                                    <input type="text" name="time" class="form-control form-control-sm" required
                                        value="<%= match.time %>">
                                    <input type="text" name="league" class="form-control form-control-sm" required
                                        value="<%= match.league %>">
                                </div>

                                <input type="text" name="game" class="form-control form-control-sm" required
                                    value="<%= match.match %>">

                                <input type="text" name="tip" class="form-control form-control-sm" required
                                    value="<%= match.tip %>">

                                <button class="btn btn-sm btn-primary d-block" type="submit">Submit</button>
                            </form>
                        </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
